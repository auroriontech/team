  .form-textarea,
  .form-select {
    padding: var(--input-padding);
    border: 2px solid var(--border-color);
    border-radius: var(--border-radius);
    background: var(--card-bg);
    color: var(--text-color);
    font-size: 1rem;
    transition: all 0.2s ease;
    font-family: inherit;
