  }
  
  /* ========================================
     ACCESSIBILITY IMPROVEMENTS
     ======================================== */
  
  @media (prefers-reduced-motion: reduce) {
    .modal-icon,
    .price-is-right .modal-icon,
    .price-is-right .btn-primary {
      animation: none;
    }
