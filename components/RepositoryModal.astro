    padding: var(--spacing-lg);
  }
  
  .modal-description {
    color: var(--text-muted);
    margin-bottom: var(--spacing-xl);
    line-height: 1.6;
  }
  
  /* ========================================
     FORM STYLES
     ======================================== */
  
  .repo-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }
  
  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }
  
  .form-label {
    font-weight: 600;
    color: var(--text-color);
    font-size: 0.9rem;
  }
  
  .form-label.required::after {
    content: ' *';
    color: var(--danger-color);
  }
  
