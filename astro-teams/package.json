{
  "name": "astro-teams",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev --host 0.0.0.0",
    "dev:local": "npm run build && wrangler pages dev dist --local --d1=aurorion-teams --port=4000",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:local\"",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint . --ext .js,.ts,.astro",
    "lint:fix": "eslint . --ext .js,.ts,.astro --fix",
    "lint:css": "stylelint \"**/*.{css,astro}\"",
    "lint:css:fix": "stylelint \"**/*.{css,astro}\" --fix",
    "lint:all": "npm run lint && npm run lint:css",
    "audit:colors": "rg \"#[0-9a-fA-F]{3,6}\" --type-add 'astro:*.astro' --type-add 'styles:*.css' -t astro -t styles -t ts --no-heading --line-number",
    "audit:tokens": "rg \"var\\(--\" --type-add 'astro:*.astro' --type-add 'styles:*.css' -t astro -t styles -t ts --no-heading --line-number",
    "project:docs": "node scripts/generate-project-docs.js",
    "project:new": "echo 'Usage: npm run project:docs <project-slug>' && echo 'This creates documentation for an existing project in src/content/projects/'",
    "db:push": "astro db sync",
    "db:verify": "astro db verify",
    "db:shell": "astro db shell",
    "db:seed": "astro db execute scripts/seed-db.ts",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:passkey": "playwright test passkey.spec.js",
    "dev:clean": "pkill -f 'astro.*dev' 2>/dev/null || true && rm -f dev.log astro.log && npm run dev",
    "cleanup": "rm -f *.log test-*.html db.timestamp-*.mjs && echo 'Development environment cleaned'"
  },
  "dependencies": {
    "@astrojs/db": "^0.14.14",
    "@astrojs/mdx": "^4.3.0",
    "@cloudflare/workers-types": "^4.20250525.0",
    "@iconify-json/lucide": "^1.2.44",
    "@modelcontextprotocol/sdk": "^1.12.0",
    "@simplewebauthn/browser": "^13.1.0",
    "@simplewebauthn/server": "^13.1.1",
    "astro": "^5.8.0",
    "astro-icon": "^1.1.5",
    "better-sqlite3": "^11.10.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.43.1",
    "express": "^5.1.0",
    "lru-cache": "^11.1.0",
    "nanoid": "^5.1.5",
    "wrangler": "^4.17.0",
    "zod": "^3.25.30"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.27.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2"
  }
}
