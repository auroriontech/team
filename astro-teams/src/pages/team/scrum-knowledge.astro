<style>
  /* Scrum-specific styles */
  .sprint-status {
    margin: 3rem 0;
  }
  
  .sprint-dashboard {
    background: var(--surface-variant);
    padding: 2rem;
    border-radius: var(--border-radius-md);
    border: 1px solid var(--border-color);
    margin-top: 2rem;
  }
  
  .sprint-overview {
    text-align: center;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--border-color);
  }
  
  .sprint-overview h3 {
    color: var(--agent-primary-color);
    margin-bottom: 0.5rem;
    font-weight: 600;
  }
  
  .sprint-meta {
    color: var(--text-secondary);
    font-size: 0.9rem;
  }
  
  .progress-metrics {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
  }
  
  .metric-card {
    background: var(--surface);
    padding: 1.5rem;
    border-radius: var(--border-radius-md);
    border: 1px solid var(--border-color);
  }
  
  .metric-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }
  
  .metric-icon {
    font-size: 1.25rem;
  }
  
  .metric-title {
    font-weight: 600;
    color: var(--text-primary);
  }
  
  .metric-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--agent-primary-color);
    margin-bottom: 0.5rem;
  }
  
  .metric-bar {
    width: 100%;
    height: 4px;
    background: var(--border-color);
    border-radius: 2px;
    overflow: hidden;
    margin-bottom: 0.5rem;
  }
  
  .metric-fill {
    height: 100%;
    background: var(--agent-primary-color);
    transition: width 0.3s ease;
  }
  
  .metric-trend {
    font-size: 0.8rem;
    color: var(--text-secondary);
  }
  
  .knowledge-management {
    margin: 3rem 0;
  }
  
  .knowledge-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }
  
  .knowledge-category {
    background: var(--surface-variant);
    padding: 1.5rem;
    border-radius: var(--border-radius-md);
    border: 1px solid var(--border-color);
  }
  
  .knowledge-category h3 {
    color: var(--agent-primary-color);
    margin-bottom: 1rem;
    font-weight: 600;
  }
  
  .knowledge-category ul {
    list-style: none;
    padding: 0;
  }
  
  .knowledge-category li {
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--border-color);
    color: var(--text-primary);
  }
  
  .knowledge-category li:last-child {
    border-bottom: none;
  }
  
  .process-workflow {
    margin: 3rem 0;
  }
  
  .workflow-diagram {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-top: 2rem;
    flex-wrap: wrap;
  }
  
  .workflow-phase {
    background: var(--surface-variant);
    padding: 1.5rem;
    border-radius: var(--border-radius-md);
    border: 2px solid var(--agent-primary-color);
    min-width: 180px;
    text-align: center;
  }
  
  .phase-header {
    margin-bottom: 1rem;
  }
  
  .phase-icon {
    font-size: 2rem;
    margin-bottom: 0.5rem;
    display: block;
  }
  
  .phase-header h4 {
    color: var(--agent-primary-color);
    font-weight: 600;
  }
  
  .phase-activities {
    list-style: none;
    padding: 0;
    text-align: left;
  }
  
  .phase-activities li {
    padding: 0.25rem 0;
    color: var(--text-primary);
    font-size: 0.9rem;
  }
  
  .workflow-arrow {
    font-size: 1.5rem;
    color: var(--agent-primary-color);
    font-weight: bold;
  }
  
  @media (max-width: 768px) {
    .workflow-diagram {
      flex-direction: column;
    }
    
    .workflow-arrow {
      transform: rotate(90deg);
    }
  }
</style>